<section class="relative flex-grow-[3] h-full flex justify-center items-center">
  <a
    href="#"
    class="block h-[70%] w-[70%] bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
  >
    <img
      class="object-contain w-full h-full rounded-t-lg md:rounded-none md:rounded-s-lg"
      src={sprite}
      alt=""
    />
  </a>
</section>

<style>
  a:hover {
    scale: 1.1;
  }
</style>
