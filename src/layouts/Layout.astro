---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon-pokemon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!--  -->
		<!-- <Header op1="Home" op2="About us" op3="Github"/> -->
		<main class="w-full h-[100vh] flex flex-col md:flex-row bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]">
			<slot/>
		</main>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		color-scheme: dark light;
	}
	body {
		min-width: 100dvw;
		min-height: 100dvh;
	}
	*, *::before, *::after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
</style>
